@startuml
' Saka-tec データベースER図

' 授業テーブル
entity "授業" as classes {
  *id : 数値 <<自動生成>>
  --
  名前 : 文字列
  教室 : 文字列
  曜日 : 数値
  時限 : 数値|'昼休み'
  色 : 文字列
  担当教員 : 文字列
  単位数 : 数値
  シラバスURL : 文字列
  メモ : テキスト
  繰り返し : 文字列
  繰り返し終了タイプ : 文字列
  繰り返し終了日 : 日付
  繰り返し回数 : 数値
  イベントフラグ : 真偽値
  作成日時 : 日時
  更新日時 : 日時
}

' 設定テーブル
entity "設定" as settings {
  *id : 数値 <<自動生成>>
  --
  キー : 文字列
  値 : 文字列
}

' 週データテーブル
entity "週情報" as weeks {
  *id : 数値 <<自動生成>>
  --
  開始日 : 日付
  終了日 : 日付
  アクティブ : 真偽値
}

' リレーション
weeks ||--o{ classes : "含む"

@enduml