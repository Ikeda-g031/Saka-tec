  }
  class HomeScreenTest {
    +HomeScreenの動作テスト
    +画面遷移テスト
    +セルクリックテスト
  }
  class DatabaseTest {
    +TimetableServiceのテスト
    +addClass(classData)
    +getAllClasses()
